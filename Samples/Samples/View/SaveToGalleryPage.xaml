<views:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="clr-namespace:Samples.View"
                xmlns:viewmodels="clr-namespace:Samples.ViewModel"
                x:Class="Samples.View.SaveToGalleryPage"
                Title="Vibration">
    <views:BasePage.BindingContext>
        <viewmodels:SaveToGalleryViewModel />
    </views:BasePage.BindingContext>

    <ScrollView>
        <StackLayout Padding="12" Spacing="12">
            <Image Source="{Binding PngUrl}"/>
            <Button Text="Save Png" Command="{Binding SavevPngCommand}"/>

            <Image Source="{Binding JpgUrl}" HeightRequest="200"/>
            <Button Text="Save Jpg" Command="{Binding SaveJpgCommand}"/>

             <Image Source="{Binding GifUrl}" HeightRequest="200" IsAnimationPlaying="True"/>
            <Button Text="Save Gif" Command="{Binding SaveGifCommand}"/>

             <MediaElement Source="{Binding Mp4Url}" HeightRequest="200"/>
            <Button Text="Save Mp4" Command="{Binding SaveMp4Command}"/>

        </StackLayout>
    </ScrollView>
</views:BasePage>
